# SERVER
PORT=4000

# Spotify
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=http://localhost:4000/api/spotify/callback

# Gemini / Google GenAI
GEMINI_API_KEY=your_gemini_api_key_or_leave_blank

# Firebase Admin (server) - path to service account JSON (do NOT commit JSON)
